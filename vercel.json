{
  "version": 2,
  "builds": [
    {
      "src": "pyproject.toml",
      "use": "@vercel/python",
      "config": {
        "distDir": "backend"
      }
    },
    {
      "src": "frontend/package.json",
      "use": "@vercel/next"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/backend/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/frontend/$1"
    }
  ]
}
